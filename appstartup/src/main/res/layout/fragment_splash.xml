<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.antonprokopov.appstartup.ui.SplashActivity">

    <ImageView
        android:id="@+id/icon_splash"
        android:layout_width="@dimen/appstartup_splash_icon_size"
        android:layout_height="@dimen/appstartup_splash_icon_size"
        android:src="@drawable/ic_splash_camera"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/splash_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/appstartup_splash_title"
        android:textSize="@dimen/appstartup_splash_title_size"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/icon_splash" />

</androidx.constraintlayout.widget.ConstraintLayout>